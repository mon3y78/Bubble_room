    tap_action:
      action: toggle
    icon_color:
      on: orange
      off: "#80808055"
  - icon: mdi:led-strip-variant
    entity: light.wled
    style: "top: 50px; left: 25px;"
    tap_action:
      action: navigate
      navigation_path: "#camera"
    icon_color:
      on: orange
      off: "#80808055"
  - icon: mdi:lava-lamp
    entity: light.gyver_lamp
    style: "top: 70px; left: 60px;"
    tap_action:
      action: toggle
    hold_action:
      action: more-info
    icon_color:
      on: orange
      off: "#80808055"
  - icon: mdi:television-classic
    entity: light.dreamview_p1_2
    style: "top: 145px; left: 60px;"
    tap_action:
      action: more-info
    icon_color:
      on: orange
      off: "#80808055"
  - icon: mdi:thermostat
    entity: climate.termostato_salotto
    style: "top: 145px; left: -5px;"
    tap_action:
      action: more-info
    icon_color:
      on: orange
      off: "#80808055"
